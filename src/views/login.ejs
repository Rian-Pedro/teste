<%- include('./includes/head') %>
<%- include('./includes/nav') %>

<div class="container w-50 p-3 my-3">
    <% if(login) { %>
        <h1 class="text-center">Login</h1>
        <h4 class="text-center fw-light">Faça seu login abaixo</h4>
    <% } else { %>
        <h1 class="text-center">Cadastre-se</h1>
        <h4 class="text-center fw-light">Faça seu cadastro abaixo</h4>
    <% } %>
</div>

<%- include('./includes/message') %>

<% if(login) { %>
    <form class="w-50 container form-login" action="/login/logar" method="post">
<% } else { %>
    <form class="w-50 container form-login" action="/login/register" method="post">
<% } %>

    <div class="mb-3 mx-auto row container">
        <label class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control border-dark" name="email" placeholder="email@email.com">
        </div>
    </div>

    <div class="mb-3 mx-auto row container">
        <label class="col-sm-2 col-form-label">Password</label>
        <div class="col-sm-10">
            <input type="password" class="form-control border-dark" name="senha">
        </div>
    </div>

    <div class="d-grid gap-2">
        <button class="btn btn-dark my-4" type="submit">
            <% if(login) { %>
                Logar
            <% } else { %>
                Registrar
            <% } %>
        </button>
    </div>

</form>

<%- include('./includes/footer') %>